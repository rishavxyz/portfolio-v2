---
import { Layout } from "$lib/layouts";

if ( Astro.cookies.get("sb-access-token")
  && Astro.cookies.get("sb-refresh-token")
) return Astro.redirect("/@");
---

<Layout title="Auth | Admin only" class="max-w-md mx-auto">
  <h1 class="mb-sm text-lg font-bold leading-snug"
    >The admin page is prohibited from any visitor except the author.</h1
  >
  <form action="/api/auth" method="post" class="space-y-sm">
    <div class="space-y-2">
      <label for="email">Your Email</label>
      <input type="email" name="email" id="email" placeholder="email@example.com" required />
    </div>
    <div class="space-y-2">
      <label for="password">Password</label>
      <input type="password" name="password" id="password" placeholder="Password" required />
    </div>
    <button class="primary label w-full">Sign in</button>
  </form>
</Layout>

<style>
  label {
    font-size: smaller;
    font-weight: 500;
  }
</style>