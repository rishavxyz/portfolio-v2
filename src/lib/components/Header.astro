---
import { AUTHOR } from "$lib/consts"
import { cn } from "$lib/utils";
import A from "./navLink.astro"

const links =
[ {name: "About", href: "about"}
// , {name: "Projects", href: "project"}
, {name: "Blogs", href: "blog"}
];

type Props = {
  class?: string;
}
---

<nav id="top" class={cn(
  "p-1 text-[1rem] flex justify-between flex-wrap gap-0.125",
  Astro.props.class
)}>
  <ul>
    <li><a href="/" class="font-display uppercase tracking-wide">{AUTHOR}</a></li>
  </ul>
  <ul class="flex flex-wrap justify-center gap-0.5 ml-auto">
		{ links.map(({name, href}) =>
			<li><A href={`/${href}`} class="contrast">{name}</A></li>
		)}
  </ul>
</nav>
